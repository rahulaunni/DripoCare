html
  head
    link(rel='shortcut icon', href='/img/siteic.ico')
    title Dripo Care
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(href='/stylesheets/bootstrap.min.css', rel='stylesheet', media='screen')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    block content
      .col-sm-4
      .col-sm-4.container.test
        .col-sm-12.reg
          h1 Forgot Password
          p.lead Enter Your Registered Mail ID
