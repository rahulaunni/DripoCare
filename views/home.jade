div.col-sm-12
      each bed in beds
         div.col-sm-12.card
                       div.col-sm-2.bed
                        h3 #{bed.bname}
                        br
                        h5 #{bed._patient.name} 
                       div.col-sm-7.medication(style="background:white")
                        div.col-sm-12.medicines
                           each med in bed._patient._medication
                             div.col-sm-3.medname
                               span #{med.name}
                             div.col-sm-8.schhold
                              each tim in med._timetable
                                div.col-sm-2.time  #{tim.time}
                       div.col-sm-3.infusion
                          .col-sm-12.del
                            span.glyphicon.glyphicon-remove
                          h4 Next Infusion at
                          h3 #{bed.__v+':00'}



                               
                         
                             