extends layout

block content
  .col-sm-4
  .col-sm-4.container.test
    .col-sm-12.reg
      h1 Dripo
      p.lead Register
      br
      form(role='form', action="/register",method="post")
        .form-group
            input.form-control.col-sm-12(type='text', name="hname", placeholder='Enter Hospital Name')
            br
            br
        .form-group
            input.form-control.col-sm-12(type='text', name="username", placeholder='Enter email')
            br
            br
        .form-group
            input.form-control.col-sm-12(type='password', name="password", placeholder='Password')
            br
            br
            br
        .col-sm-6      
            button.btn.btn-success.col-sm-12(type='submit') Register
        .col-sm-6      
            a.btn.btn-primary.col-sm-12(href='/login') Cancel
        &nbsp;


